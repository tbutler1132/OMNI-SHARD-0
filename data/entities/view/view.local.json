    "name": "Main vector matrix",
    "description": "Display vector matrix",
    "targetEntity": "convergence",
    "layout": "board",
    "fields": ["title"],
    "fieldOverrides": {},
    "filters": [
      {
        "field": "vector",
        "operator": "equals",
        "value": true
      },
      {
        "field": "temporality",
        "operator": "equals",
        "value": "present"
      },
      {
        "field": "status",
        "operator": "notEquals",
        "value": "completed"
      },
      {
        "field": "priority",
        "operator": "isNotNull"
      }
    ],
    "sort": [{ "field": "createdAt", "order": "desc" }],
    "groupBy": {
      "field": "priority",
      "order": ["high", "medium", "low"],
      "labels": {
